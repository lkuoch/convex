{
  "devDependencies": {
    "@convex-dev/eslint-plugin": "1.1.1",
    "@vitejs/plugin-react": "5.1.2",
    "bun-tasks": "^0.1.2",
    "oxlint": "1.39.0",
    "typescript": "5.9.3",
    "vite": "7.3.1"
  },
  "name": "law",
  "private": true,
  "scripts": {
    "build": "bun run --filter '*' build",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "dev": "bun-tasks dev:web ::: dev:backend",
    "dev:backend": "cd apps/backend && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "lint": "oxlint -c oxlint.json --react-plugin --import-plugin",
    "lint:format": "oxlint -c oxlint.json --fix --react-plugin --import-plugin",
    "lint:types": "bun run --filter '*' lint"
  },
  "type": "module",
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}